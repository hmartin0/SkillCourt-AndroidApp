<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".ui.main.HomeFragment">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/main_screen_area"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/playButton"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_above="@id/pad_settings"
                android:background="@drawable/home_play_color"
                android:drawableRight="@drawable/ic_play_circle_outline_white_35dp"
                android:paddingRight="26dip"
                android:drawablePadding="2dip"
                android:textColor="@color/colorButtonText"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:text="Play" />

            <Button
                android:id="@+id/pad_settings"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="@drawable/home_play_color"
                android:textColor="@color/colorButtonText"
                android:drawableRight="@drawable/ic_pad_setting_icon_layer"
                android:paddingRight="26dip"
                android:drawablePadding="2dip"
                android:fontFamily="@font/regular"
                android:textSize="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="Pad Settings" />

            <Button
                android:id="@+id/websiteButton"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/regular"
                android:layout_below="@id/pad_settings"
                android:background="@drawable/home_play_color"
                android:drawableRight="@drawable/ic_website_button"
                android:paddingRight="26dip"
                android:drawablePadding="2dip"
                android:textColor="@color/colorButtonText"
                android:textSize="15dp"
                android:layout_centerHorizontal="true"
                android:text="Website" />

        </RelativeLayout>



        <!--<android.support.design.widget.FloatingActionButton
            android:id="@+id/playButton"

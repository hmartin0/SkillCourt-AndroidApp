<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient">

    <at.grabner.circleprogress.CircleProgressView
        android:id="@+id/game_over_progress"
        android:layout_width="277dp"
        android:layout_height="277dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        CircleProgressView:cpv_autoTextSize="true"
        CircleProgressView:cpv_barColor="@color/buttonGreen"
        CircleProgressView:cpv_barWidth="6dp"
        CircleProgressView:cpv_innerContourSize="0dp"
        CircleProgressView:cpv_maxValue="100"
        CircleProgressView:cpv_outerContourSize="0dp"
        CircleProgressView:cpv_rimColor="#B3B3B3"
        CircleProgressView:cpv_rimWidth="6dp"
        CircleProgressView:cpv_seekMode="false"
        CircleProgressView:cpv_showUnit="true"
        CircleProgressView:cpv_spinColor="@color/buttonGreen"
        CircleProgressView:cpv_textColor="@color/buttonGreen"
        CircleProgressView:cpv_unit="%"
        CircleProgressView:cpv_unitColor="@color/buttonGreen"
        CircleProgressView:cpv_unitPosition="right_top"
        CircleProgressView:cpv_unitToTextScale="1"
        CircleProgressView:cpv_value="0" />


    <TextView
        android:id="@+id/game_over_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/game_over_linearLayout1"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="00:00:00"
        android:fontFamily="@font/regular"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:textSize="50sp" />

    <LinearLayout
        android:id="@+id/game_over_linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="horizontal"
        android:animateLayoutChanges="true"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:weightSum="100">

        <TextView
            android:id="@+id/game_over_hits"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:gravity="center"
            android:text="Hits"
            android:textAlignment="center"
            android:fontFamily="@font/regular"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/game_over_mode"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="33"
            android:gravity="center"
            android:fontFamily="@font/regular"
            android:text="SEQUENCE"
            android:textAlignment="center"
            android:textColor="#f20707"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/game_over_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="32"
            android:fontFamily="@font/regular"
            android:gravity="center"
            android:text="Score"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:weightSum="100">

        <Button
            android:id="@+id/game_over_home_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="#00000000"
            android:fontFamily="@font/regular"
            android:text="Home"
            android:drawableTop="@drawable/ic_home_green_24dp"
            android:textAlignment="center"
            android:textColor="@color/buttonGreen" />

        <Button
            android:id="@+id/game_over_new_game_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_games_green_24dp"
            android:fontFamily="@font/regular"
            android:text="New Game"
            android:textAlignment="center"
            android:textColor="@color/buttonGreen" />

        <Button
            android:id="@+id/game_over_play_again_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:background="#00000000"
            android:fontFamily="@font/regular"
            android:drawableTop="@drawable/ic_play_circle_outline_green_24dp"
            android:text="Play Again"
            android:textAlignment="center"
            android:textColor="@color/buttonGreen" />

        <Button
            android:id="@+id/save_data_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="25"
            android:fontFamily="@font/regular"
            android:background="#00000000"
            android:drawableTop="@drawable/ic_save_green_24dp"
            android:text="Save"
            android:textAlignment="center"
            android:textColor="@color/buttonGreen"/>

    </LinearLayout>

</RelativeLayout>
